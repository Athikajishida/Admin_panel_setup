<!DOCTYPE html>
<html>

<head>
    <title>LoginDemo</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">LoginDemo</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <% if user_signed_in? %>
                    <li class="nav-item">
                        <%= link_to 'Edit Password', edit_password_path, class: 'nav-link' %>
                    </li>
                    <li class="nav-item">
                        <%= button_to 'Log Out', session_path, method: :delete, class: 'btn btn-danger' %>
                    </li>
                <% else %>
                    <li class="nav-item">
                        <%= link_to 'Sign Up', new_registration_path, class: 'nav-link' %>
                    </li>
                    <li class="nav-item">
                        <%= link_to 'Log In', new_session_path, class: 'nav-link' %>
                    </li>
                <% end %>
            </ul>
        </div>
    </nav>

    <div class="container mt-3">
        <div id="success-alert" class="alert alert-success" style="display:none;">
            <!-- JavaScript will handle the content -->
        </div>
        <div id="error-alert" class="alert alert-danger" style="display:none;">
            <!-- JavaScript will handle the content -->
        </div>

        <%= yield %>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        // JavaScript to show/hide alerts
        document.addEventListener("DOMContentLoaded", function () {
            var successAlert = document.getElementById("success-alert");
            var errorAlert = document.getElementById("error-alert");

            // Set the content of alerts dynamically
            successAlert.innerHTML = "<%= notice %>";
            errorAlert.innerHTML = "<%= alert %>";

            // Show/hide alerts after a certain delay
            if (successAlert.innerHTML.trim() !== "") {
                setTimeout(function () {
                    successAlert.style.display = "none";
                }, 5000); // Hide success alert after 5 seconds
            }

            if (errorAlert.innerHTML.trim() !== "") {
                setTimeout(function () {
                    errorAlert.style.display = "none";
                }, 5000); // Hide error alert after 5 seconds
            }
        });
    </script>
</body>

</html>
